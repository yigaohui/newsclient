<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="#FFFFFF"
     >
    
    <ImageView 
        android:id="@+id/item_iv_icon"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:src="@drawable/news_pic_default"
        android:background="#000000"
        android:padding="1dp"
        android:scaleType="fitXY"
        android:layout_marginRight="8dp"
        />
    <!-- fitXY : 拉伸图片，填充满整个imageView -->
    
    <TextView 
        android:id="@+id/item_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="爱十分骄傲的房间爱上的房间爱死了的发髻上放大撒打发斯蒂芬爱上了对方"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/item_iv_icon"
        android:maxLines="2"
        />
    <!-- maxLines : 设置textview的最大行数 -->
    <TextView 
        android:id="@+id/item_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016-11-06 10:57:00"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"
        android:layout_toRightOf="@+id/item_iv_icon"
        android:layout_below="@+id/item_tv_title"
        android:layout_marginTop="8dp"
        />
    

</RelativeLayout>