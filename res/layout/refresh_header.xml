<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:id="@+id/refresh_ll_headerrootview"
    >
    
    <!-- 刷新头 -->
    <LinearLayout 
        android:id="@+id/refresh_ll_headerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RelativeLayout 
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            >
            <ImageView 
                android:id="@+id/refresh_iv_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/common_listview_headview_red_arrow"
                android:layout_centerInParent="true"
                />
            <ProgressBar 
                android:id="@+id/refresh_pb_loading"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:indeterminateDrawable="@drawable/progressbar_style"
                android:layout_centerInParent="true"
                android:visibility="gone"
                />
        </RelativeLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            >
            <TextView 
                android:id="@+id/refresh_tv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下拉刷新"
                android:textColor="#FF0000"
                android:layout_gravity="center_horizontal"
                />
            <TextView 
                android:id="@+id/refresh_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-11-06 11:37:00"
                android:textColor="@android:color/darker_gray"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>
    </LinearLayout>
    <!-- Viewpager -->
    

</LinearLayout>